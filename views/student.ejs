  <h2>Currently Reading: </h1>
        
  <div class="row">
    <%  for(let i = 0; i < books.length; i++) { %>
           <% if(books[i].currentBook == true){ %>
          <div class="col-sm-3">
            <div class="card">
              <div class="card-body">
                   <h5 class="card-title"> <%= books[i].title %></h5>
                   <p class="card-text"> <%= books[i].author %></p>
                <button  class="updateForm" value=<%=books[i]._id%> >Finished Reading?</button>
