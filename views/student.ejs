      <label>Book's Title</label>
        <input type="text" class="form-control" id="title" name="title" required>
      <!-- </div> -->
      <!-- <div class="form-group"> -->
        <label>The Author of The Book</label>
        <input type="text" class="form-control" name="author" required>
      <!-- </div> -->
      <!-- <div class="form-group"> -->
        <!-- <label>Date Started</label>
        <input type="date" class="form-control" name="startDate"> -->
      
      <label >Are you currently reading this book?</label>

      <select class="form-control" id="currentbook" name="currentBook" required>
          <option value="true">Yes</option>
          <option value="false">No</option>
        </select>

      <label id="studentid"></label>
      <input style="color: #a3b18a;" type="text" class="form-control" name="studentId" value="<%= _id %>" id="studentid" readonly>

      <!-- </div> -->
       <button type="submit" class="form-control"<%= _id %>">Add Book</button>
    </form>
    
  <!-- </form> -->
      
  <h2>Currently Reading: </h1>
        
  <div class="row">
    <%  for(let i = 0; i < books.length; i++) { %>
           <% if(books[i].currentBook == true){ %>
          <div class="col-sm-3">
            <div class="card">
              <div class="card-body">
                   <h5 class="card-title"> <%= books[i].title %></h5>
                   <p class="card-text"> <%= books[i].author %></p>
                  
                <button  class="updateForm" value=<%=books[i]._id%> >Finished Reading?</button>
                   <button class="deleteForm" value=<%=books[i]._id%>>Delete Book</button>
              </div>
            </div>
          </div>



    <% } %>
      <% } %>
       
  <h2>Books Read: </h1>

        <div class="row">
          <%  for(let i = 0; i < books.length; i++) { %>
                   <% if(books[i].currentBook == false){ %>
                <div class="col-sm-3">
                  <div class="card">
                    <div class="card-body">
                         <h5 class="card-title"> <%= books[i].title %></h5>
                         <p class="card-text"> <%= books[i].author %></p>
                         <button class="deleteForm" value=<%=books[i]._id%>>Delete Book</button>
                    </div>
                  </div>
                </div>



          <% } %>
            <% } %>
